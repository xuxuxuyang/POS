
.about-container {
  min-height: 100vh;
  background-color: #f7f7f7;
  padding: 30rpx;
}
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}
.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}
.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.app-version {
  font-size: 28rpx;
  color: #999;
}
.about-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.about-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 15rpx;
}
.about-content {
  display: flex;
  flex-direction: column;
}
.about-content text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 15rpx;
}
.contact-list {
  display: flex;
  flex-direction: column;
}
.contact-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.contact-text {
  font-size: 28rpx;
  color: #666;
}
.copyright {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 40rpx;
  margin-bottom: 60rpx;
}
